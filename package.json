{
	"name": "n00menon",
	"version": "0.1.0",
	"description": "Minimal Node/TS demo service with ping/greet APIs and Vitest coverage.",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"preinstall": "node ../scripts/guard-subrepo-pnpm-install.mjs",
		"dev": "tsx watch src/index.ts",
		"build": "tsc -p tsconfig.json",
		"start": "node dist/index.js",
		"test": "vitest run --coverage",
		"test:watch": "vitest",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"lint:spell": "pnpm exec cspell --config ../cspell.json 'docs/**/*' 'modules/ROOT/pages/**/*.adoc' || true",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"typecheck": "tsc --noEmit",
		"docs:build": "typedoc --options typedoc.json",
		"docs:clean": "rm -rf docs/api",
		"docs": "pnpm run docs:build",
		"docs:sync": "node ../scripts/sync-n00menon-docs.mjs --write",
		"docs:sync:check": "node ../scripts/sync-n00menon-docs.mjs --check",
		"docs:fix-style": "node ../scripts/fix-docs-style.mjs --pattern 'n00menon/modules/**/*.adoc'",
		"pages:build": "node scripts/build-pages.mjs",
		"ci:pages": "pnpm lint && pnpm test && pnpm build && pnpm docs:build && pnpm pages:build",
		"validate": "pnpm run typecheck && pnpm run lint && pnpm run format:check && pnpm test && pnpm run docs:sync:check && pnpm run docs:build",
		"docker:build": "docker build -t n00menon .",
		"docker:run": "docker run -p 3000:3000 n00menon",
		"docker:up": "docker-compose up --build",
		"docker:down": "docker-compose down",
		"docker:dev": "docker-compose --profile dev up --build",
		"docker:docs": "docker-compose --profile docs up"
	},
	"engines": {
		"node": ">=25.5.0",
		"pnpm": ">=10.28.2"
	},
	"packageManager": "pnpm@10.28.2",
	"keywords": [
		"demo",
		"ping",
		"service",
		"nodejs",
		"typescript",
		"vitest"
	],
	"license": "MIT",
	"author": "n00tropic",
	"devDependencies": {
		"@tsconfig/node24": "^24.0.4",
		"@types/node": "^25.2.1",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"@vitest/coverage-v8": "^4.0.18",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"prettier": "^3.8.1",
		"tsx": "^4.21.0",
		"typedoc": "^0.28.16",
		"typescript": "^5.9.3"
	}

}
