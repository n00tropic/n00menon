{
  "name": "n00menon",
  "version": "0.1.0",
  "description": "Document Curation Hub with MCP and CLI interface",
  "type": "module",
  "bin": {
    "n00menon": "./dist/cli/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    }
  },
  "scripts": {
    "preinstall": "node ../../scripts/guard-subrepo-pnpm-install.mjs",
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && chmod +x dist/cli/index.js",
    "start": "node dist/cli/index.js serve",
    "test": "mkdir -p .tmp && TMPDIR=$PWD/.tmp vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:spell": "pnpm exec cspell --config ../../cspell.json 'docs/**/*' 'modules/ROOT/pages/**/*.adoc' || true",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "docs:build": "node ../../scripts/run-typedoc.mjs --options typedoc.json",
    "docs:regen": "bash ../../scripts/regenerate-n00menon-docs.sh",
    "docs:clean": "rm -rf docs/api",
    "docs": "pnpm run docs:build",
    "docs:sync": "node dist/cli/index.js sync",
    "docs:sync:check": "node dist/cli/index.js sync --check",
    "docs:fix-style": "node dist/cli/index.js fix-style --pattern 'n00menon/modules/**/*.adoc'",
    "pages:build": "node scripts/build-pages.mjs",
    "ci:pages": "pnpm lint && pnpm test && pnpm build && pnpm docs:build && pnpm pages:build",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run format:check && pnpm test && pnpm run docs:sync:check && pnpm run docs:build",
    "docker:build": "docker build -t n00menon .",
    "docker:run": "docker run -p 3000:3000 n00menon",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose --profile dev up --build",
    "docker:docs": "docker-compose --profile docs up"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/js-yaml": "^4.0.9",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "execa": "^9.6.1",
    "globby": "^16.1.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "n00-cortex": "workspace:*",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=25.6.0",
    "pnpm": ">=10.28.2"
  },
  "packageManager": "pnpm@10.29.1",
  "keywords": [
    "demo",
    "ping",
    "service",
    "nodejs",
    "typescript",
    "vitest"
  ],
  "license": "MIT",
  "author": "n00tropic",
  "devDependencies": {
    "@tsconfig/node24": "^24.0.4",
    "@types/node": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3"
  }
}
