{
  "name": "n00menon",
  "version": "0.1.0",
  "description": "Minimal Node/TS demo service with ping/greet APIs and Vitest coverage.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "lint": "echo 'No lint configured'",
    "lint:spell": "pnpm exec cspell --config ../cspell.json 'docs/**/*' 'modules/ROOT/pages/**/*.adoc' || true",
    "docs:build": "typedoc --options typedoc.json",
    "docs:clean": "rm -rf docs/api",
    "docs": "pnpm run docs:build",
    "docs:sync": "node ../scripts/sync-n00menon-docs.mjs --write",
    "docs:sync:check": "node ../scripts/sync-n00menon-docs.mjs --check",
    "validate": "pnpm run docs:sync:check && pnpm run test && pnpm run docs:build"
  },
  "engines": {
    "node": ">=24.11.0"
  },
  "packageManager": "pnpm@10.23.0",
  "keywords": ["demo", "ping", "vitest", "typescript"],
  "license": "MIT",
  "author": "n00tropic",
  "devDependencies": {
    "@tsconfig/node24": "24.0.3",
    "@types/node": "^22.9.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0"
  }
}
